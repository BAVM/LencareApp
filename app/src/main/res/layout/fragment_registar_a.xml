<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.admin.registrar_users.RegistarFragmentA">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <!-- TITULO DEL ENCABEZADO-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/RegistroTXT"
                        android:textAllCaps="true"
                        android:textColor="@color/color7"
                        android:textSize="30sp" />

                </LinearLayout>

                <!-- TITULO FECHA E ICONO-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/Fecha"
                        android:textColor="@color/color7"
                        android:textSize="17sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/calendario_v"
                        android:tint="@color/color7" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <!-- AÑADIR IMAGEN PERFIL-->

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/teamwork"
                    tools:ignore="ImageContrastCheck" />

            </LinearLayout>

            <!-- CAMPO TEXTO NOMBRE-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_1"
                android:layout_margin="15dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:startIconDrawable="@drawable/perfil_v">

                    <EditText
                        android:id="@+id/Nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:hint="@string/Nombre"
                        android:layout_margin="10dp"
                        android:inputType="textCapWords|textAutoCorrect"/>

                </com.google.android.material.textfield.TextInputLayout>


                <!-- CAMPO TEXTO APELLIDO-->

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/perfil_v">

                    <EditText
                        android:id="@+id/Apellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:hint="@string/Apellido"
                        android:layout_margin="10dp"
                        android:inputType="textCapWords|textAutoCorrect"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- CAMPO TEXTO EMAIL-->

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/email_v">

                    <EditText
                        android:id="@+id/Email"
                        android:hint="@string/Email"
                        android:layout_margin="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- CAMPO TEXTO CONTRASEÑA-->

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:startIconDrawable="@drawable/lock_v">

                    <EditText
                        android:id="@+id/Password"
                        android:hint="@string/Password"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textPassword"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:padding="10dp">

                        <TextView
                            android:text="@string/TipoUserTXT"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"/>


                        <Spinner
                            android:id="@+id/Roll"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="80dp"/>



                    </androidx.appcompat.widget.LinearLayoutCompat>


                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/Registrar"
                    android:text="@string/Registrar"
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:shadowColor="@color/color10"
                    android:background="@color/primary5"
                    android:textColor="@color/color11"
                    android:layout_height="50dp" />

            </LinearLayout>


        </LinearLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>